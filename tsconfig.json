{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es2019",
    "module": "NodeNext",
    "jsx": "react-native",
    "strict": false,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "app",
    "src",
    "components",
    "hooks",
    "assets",
    "**/*.ts",
    "**/*.tsx",
    "declarations.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
